<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1472709171579-139831cdf19e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80);">
  <div class="container text-center">
    <h1>Rent your best ride!<strong></h1>
    <p>Enjoy the city with more <strong>freedom!</strong></p>
    <a class="btn btn-flat" href=  >Book now</a>
  </div>
</div>
<main class="container">
  <div class="row mt-3">
    <% @offers.each do |offer| %>
      <div class="col-sm-12 col-lg-6 col-xl-4 my-3">
        <%= link_to offer_path(offer), class: "text-decoration-none" do %>
          <%= render 'shared/card', offer: offer %>
        <% end %>
      </div>
    <% end %>
  </div>


  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="row mt-3">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="col-sm-12 col-md-6 my-3 margin-auto">
            <%= link_to offer_path(@offers.first), class: "text-decoration-none" do %>
              <%= render 'shared/card', offer: @offers.first %>
            <% end %>
          </div>
        </div>
        <% @offers[1..-1].each do |offer| %>
          <div class="carousel-item">
            <div class="col-sm-12 col-md-6 my-3 margin-auto">
              <%= link_to offer_path(offer), class: "text-decoration-none" do %>
                <%= render 'shared/card', offer: offer %>
              <% end %>
            </div>
          </div>
        <% end %>
        <%# <div class="carousel-item">
          <img src="..." class="d-block w-100" alt="...">
        </div> %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</main>
