<main class="container my-5 p-5">
  <div class="form-card devise-form background-green b-radius p-5 pb-4">
    <h2 class="mb-4">Log in</h2>

    <%= simple_form_for(resource,
                        as: resource_name,
                        url: session_path(resource_name),
                        data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "border-green b-radius", autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { class: "border-green b-radius", autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-lg btn-outline-light b-radius w-100 my-4" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
