<%= simple_form_for(@offer) do |f| %>
  <%= f.input :title %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :price_in_cents %>

  <%= f.input :electric %>
  <%= f.input :safety_equipment %>
  <%= f.association :optional, :collection => %w[None, Padlock, Backseat], required: true %>
  <%= f.submit %>
<% end %>
